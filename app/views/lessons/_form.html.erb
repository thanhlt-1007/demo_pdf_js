<%= form_for lesson, remote: true, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
      <p class="text-danger js-error-lesson-name"></p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", rows: 5 %>
      <p class="text-danger js-error-lesson-description"></p>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :document, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :document, class: "form-control js-file-lesson-document" %>
      <p class="text-danger js-error-lesson-document"></p>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-success pull-right" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <iframe src="<%= lesson.document.url %>" frameborder="0"
        class="iframe-lesson-document js-iframe-lesson-document">
      </iframe>
    </div>
  </div>
<% end %>
