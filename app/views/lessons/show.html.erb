<div class="container">
  <h2><%= @lesson.name %></h2>

  <table class="table">
    <tbody>
      <tr>
        <th>ID</th>
        <td><%= @lesson.id %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @lesson.name %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= @lesson.description %></td>
      </tr>
      <tr>
        <th>Document</th>
        <td>
          <iframe src="<%= @lesson.document.url %>" class="iframe-lesson-document" frameborder="0">
          </iframe>
        </td>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to "Update Lesson", edit_lesson_path(@lesson), class: "btn btn-success pull-right" %>
  </div>
</div>
