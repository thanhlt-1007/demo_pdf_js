<div class="container">
  <h2><%= @lesson.name %></h2>

  <table class="table">
    <tbody>
      <tr>
        <th>ID</th>
        <td><%= @lesson.id %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @lesson.name %></td>
      </tr>
      <tr>
        <th>Description</th>
        <td><%= @lesson.description %></td>
      </tr>
      <tr>
        <th>Document</th>
        <td class="text-center">
          <div class="col-sm-12">
            <canvas class="canvas-lesson-document js-canvas-fullview-pdf" data-url="<%= @lesson.document.url %>">
          </div>
          <div class="col-sm-12">
            <button class="btn btn-primary btn-pdf-page">Next page</button>
            <input type="text" class="form-control form-control-pdf-page" value="Trang 1">
            <button class="btn btn-primary btn-pdf-page">Previous page</button>
          </div>
        </td>
      </tr>
    </tbody>
  </table>

  <div>
    <%= link_to "Update Lesson", edit_lesson_path(@lesson), class: "btn btn-success pull-right" %>
  </div>
</div>
